@model IEnumerable<Mvc.StorageAccount.Demo.Data.AttendeeEntity>

@{
    ViewData["Title"] = "Attendees - NEW FEATURES";
}

<h1>Attendees List - NEW FEATURES</h1>

<p>
    <a asp-action="Create">Add New Attendee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Avatar</th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Industry)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.ImageName" width="50" height="50"/>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry)
            </td>
            <td>
                <form asp-action="Delete" style="display: inline-block;">
                    <input type="hidden" value="@item.RowKey" name="id" />
                    <input type="hidden" value="@item.Industry" name="industry" />
                    @Html.ActionLink("Edit", "Edit", new { industry = item.Industry, id = item.RowKey }, new{@class="btn btn-warning"})
                    @Html.ActionLink("Details", "Details", new { industry = item.Industry, id = item.RowKey }, new { @class = "btn btn-primary" })
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
